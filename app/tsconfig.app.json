{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "App.vue.ts", "../main.ts"],
  "exclude": ["src/**/*.spec.ts", "src/***/*.spec.tsx"],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
